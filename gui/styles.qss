/**************************************************
 * 전역 기본 설정
 * - 전체 배경, 기본 폰트/글자색, 기본 글자 크기
 **************************************************/
QMainWindow, QWidget {
    background: #f5f7fa;
    font-family: 'Segoe UI', '맑은 고딕', Arial, sans-serif;    /* 기본 폰트 */
    color: #2e3440;   /* 기본 글자색 */
    font-size: 15px;    /* 기본 글자 크기 */
}

/**************************************************
 * 라벨(Label)
 * - 일반 라벨의 기본 스타일
 **************************************************/
QLabel {
    color: #25415b;        /* 라벨 기본 글자색 */
    font-size: 15px;         /* 일반 라벨 크기 */
    font-weight: bold;       /* 약간 강조 */
}

/* 환영 문구 라벨 */
/* - 환영 문구는 더 크게, 굵게 */
QLabel#welcomeLabel {
    font-size: 28px;         /* 환영 문구를 크게 */
    font-weight: 700;        /* 더 굵게 */
}



/* 버튼 */
QPushButton {
    background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                      stop:0 #eaf1ff, stop:1 #cae0fc);
    color: #274d79;
    border-radius: 7px;
    padding: 10px 0;  /* 상하 여백만 적용 */
    font-weight: bold;
    border: 1.5px solid #b6cbdd;
    min-width: 150px;  /* 👈 버튼 넓이 통일 */
}
QPushButton:hover {
    background-color: #daeaff;
    color: #153b73;
    border: 1.5px solid #8ab3e7;
}
QPushButton:pressed {
    background-color: #b7cdf6;
}

/* 입력창 */
QLineEdit, QPlainTextEdit, QTextEdit {
    background: #fff;
    border: 1.5px solid #dae4ee;
    border-radius: 6px;
    padding: 7px 12px;
    color: #263346;
}
QLineEdit:focus, QPlainTextEdit:focus, QTextEdit:focus {
    border: 1.5px solid #60aaff;
    background: #f6fbff;
}

/* 라벨 */
QLabel {
    color: #25415b;
    font-size: 15px;  /* 👈 더 자연스러운 크기 */
    font-weight: bold;
}


/* 테이블 */
QTableView {
    background: #fafdff;
    border: 1.3px solid #dbe3ef;
    border-radius: 8px;
    gridline-color: #e4e9f2;
}
QTableWidget {
    background: #ffffff;
    border: 1.3px solid #ccc;
    border-radius: 6px;
    gridline-color: #e0e0e0;
    font-size: 14px;
}
QHeaderView::section {
    background-color: #f7f7f7;
    font-weight: bold;
    padding: 6px;
    border: 1px solid #ddd;
}
QTableWidget::item:selected, QTableView::item:selected {
    background: #c9e1fb;
    color: #102943;
}

/* 콤보박스 */
QComboBox {
    border: 1.5px solid #ccd7e4;
    border-radius: 6px;
    background: #fff;
    padding: 7px 16px 7px 10px;
}
QComboBox:focus {
    border: 1.5px solid #6db6fa;
}

/* 스크롤바 */
QScrollBar:vertical {
    border: none;
    background: #f3f7fa;
    width: 9px;
    border-radius: 4px;
}
QScrollBar::handle:vertical {
    background: #c3d4ec;
    min-height: 20px;
    border-radius: 5px;
}
QScrollBar::handle:vertical:hover {
    background: #90b8e6;
}

/* 그룹박스 */
QGroupBox {
    border: 1.3px solid #b9cadb;
    border-radius: 11px;
    margin-top: 13px;
    background: #fbfcfe;
}
QGroupBox:title {
    subcontrol-origin: margin;
    left: 14px;
    top: -8px;
    color: #4e81be;
    background: transparent;
    font-weight: 600;
    font-size: 14px;
    padding: 1px 6px;
}

/* 메시지 박스 */
QMessageBox {
    background: #f9fbfe;
    font-size: 15px;
}

/* 비활성 위젯 */
QWidget:disabled {
    color: #a6b3c5;
}
